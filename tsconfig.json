{
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "lib": ["ES2023"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
  },
  "include": ["app"], 
  "exclude": ["node_modules"]  
}